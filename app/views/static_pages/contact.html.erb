<%= render partial: "shared/page_header", locals: { title: "お問い合わせ" } %>

<div class="container mt50">
    <div class="contact-info" data-aos="fade-up">
        <div class="row">
            <div class="col-lg-4 col-md-12 content-wrapper">
                <div class="info-content">
                    <div class="left">
                        <i class="fa fa-phone"></i>
                    </div>
                    <div class="right">
                        <h6 class="mb10">電話番号</h6>
                        <p class="mb0">
                            <%= Settings.company_info.mobile_phone %>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-12 content-wrapper">
                <div class="info-content">
                    <div class="left">
                        <i class="fa fa-home"></i>
                    </div>
                    <div class="right">
                        <h6 class="mb10">住所</h6>
                        <p class="mb0">
                            兵庫県神戸市兵庫区大開通１０丁目２－１６　初阪第一ビル3階
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-12 content-wrapper">
                <div class="info-content">
                    <div class="left">
                        <i class="fa fa-envelope"></i>
                    </div>
                    <div class="right">
                        <h6 class="mb10">メール</h6>
                        <p class="mb0">
                            <%= Settings.company_info.email %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%= render "shared/contact_form" %>

    <div id="map" class="mb30">
        <iframe
            src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d3236.719775777891!2d139.7201038152615!3d35.78225928017083!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1svi!2s!4v1558967831832!5m2!1svi!2s"
            width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
    </div>

</div>
